<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlchemyByKirill.ViewModels"
             x:DataType="vm:StartViewModel"
             x:Class="AlchemyByKirill.Views.StartPage"
             Title="StartPage">

    <Grid>
        <Image 
            Source="splash.png"
            Aspect="AspectFill"
            Opacity="0.8" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <VerticalStackLayout
                Grid.Row="1"
                Spacing="10"
                Padding="30, 20">
                <Button 
                    Text="Начать игру"
                    Command="{Binding GoToGameCommand}"
                    HorizontalOptions="Fill" />
                <Button 
                    Text="Library"
                    Command="{Binding GoToLibraryCommand}"
                    HorizontalOptions="Fill" />
                <Button 
                    Text="Exit"
                    Command="{Binding GoToLibraryCommand}"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>

        </Grid>
    </Grid>

</ContentPage>