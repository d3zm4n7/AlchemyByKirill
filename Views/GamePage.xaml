<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlchemyByKirill.ViewModels"
             xmlns:models="clr-namespace:AlchemyByKirill.Models"
             x:DataType="vm:GameViewModel"
             x:Class="AlchemyByKirill.Views.GamePage"
             Title="Alchemy Game">

    <Grid RowDefinitions="*, Auto" Padding="10">

        <Border Grid.Row="0" StrokeThickness="1" Stroke="Gray" Padding="5" Margin="0,0,0,10">

            <AbsoluteLayout x:Name="GameBoardLayout"
                            BindableLayout.ItemsSource="{Binding GameBoardElements}">

                <AbsoluteLayout.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="2"
                                           Command="{Binding SpawnBaseElementsCommand}" />
                </AbsoluteLayout.GestureRecognizers>

                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models:Element">
                        <ContentView WidthRequest="75" HeightRequest="75"
                                     AbsoluteLayout.LayoutBounds="0.5, 0.5" 
                                     AbsoluteLayout.LayoutFlags="PositionProportional">

                            <Border Stroke="Green" StrokeThickness="2" BackgroundColor="LightGreen" Padding="2">
                                <VerticalStackLayout Spacing="2">
                                    <Image Source="{Binding ImagePath}"
                                           HeightRequest="40"
                                           WidthRequest="40"
                                           Aspect="AspectFit"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding Name}"
                                           FontSize="10"
                                           HorizontalOptions="Center"
                                           HorizontalTextAlignment="Center"
                                           LineBreakMode="TailTruncation"/>
                                </VerticalStackLayout>
                            </Border>

                            <ContentView.GestureRecognizers>
                                <DragGestureRecognizer CanDrag="True"
                                                       DragStartingCommand="{Binding Source={RelativeSource AncestorType={x:Type vm:GameViewModel}}, Path=ElementDragStartingCommand}" />
                            </ContentView.GestureRecognizers>

                        </ContentView>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>

                <Border x:Name="DropZone1" 
                        BackgroundColor="LightCoral" 
                        WidthRequest="100" HeightRequest="100"
                        AbsoluteLayout.LayoutBounds="0.1, 0.8" 
                        AbsoluteLayout.LayoutFlags="PositionProportional">

                    <Border.GestureRecognizers>
                        <DropGestureRecognizer AllowDrop="True" />
                    </Border.GestureRecognizers>
                    <Label Text="Слот 1" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>

                <Border x:Name="DropZone2" 
                        BackgroundColor="LightBlue" 
                        WidthRequest="100" HeightRequest="100"
                        AbsoluteLayout.LayoutBounds="0.9, 0.8" 
                        AbsoluteLayout.LayoutFlags="PositionProportional">

                    <Border.GestureRecognizers>
                        <DropGestureRecognizer AllowDrop="True" />
                    </Border.GestureRecognizers>
                    <Label Text="Слот 2" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>

            </AbsoluteLayout>
        </Border>

        <Border Grid.Row="1" StrokeThickness="1" Stroke="DarkGoldenrod" MinimumHeightRequest="150" Padding="5">
            <ScrollView Orientation="Vertical">
                <CollectionView ItemsSource="{Binding DiscoveredElements}" SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="5" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Element">
                            <Grid Padding="5" WidthRequest="75" HeightRequest="75">
                                <Border Stroke="LightGray" StrokeThickness="1" BackgroundColor="AliceBlue" Padding="2">
                                    <VerticalStackLayout Spacing="2">
                                        <Image Source="{Binding ImagePath}"
                                               HeightRequest="40"
                                               WidthRequest="40"
                                               Aspect="AspectFit"
                                               HorizontalOptions="Center" />
                                        <Label Text="{Binding Name}"
                                               FontSize="10"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               LineBreakMode="TailTruncation"/>
                                    </VerticalStackLayout>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </Border>

        <Label Grid.Row="0" Text="{Binding PlayerScore, StringFormat='Счет: {0}'}"
               FontSize="Large"
               HorizontalOptions="End"
               VerticalOptions="Start"
               Margin="0,5,5,0" />

    </Grid>
</ContentPage>