<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlchemyByKirill.ViewModels"
             xmlns:models="clr-namespace:AlchemyByKirill.Models"
             x:DataType="vm:GameViewModel"
             x:Class="AlchemyByKirill.Views.GamePage"
             Title="Alchemy Game"
             BackgroundColor="Black">

    <Grid RowDefinitions="*, Auto, Auto" Padding="10">

        <!-- Рабочее поле -->
        <Border Grid.Row="0" StrokeThickness="1" Stroke="DarkGray" Padding="5" Margin="0,0,0,10">
            <AbsoluteLayout x:Name="GameBoardLayout"
                            BackgroundColor="Black"
                            BindableLayout.ItemsSource="{Binding GameBoardElements}">

                <!-- Drop обрабатываем событием (чтобы координаты были относительно GameBoardLayout) -->
                <AbsoluteLayout.GestureRecognizers>
                    <DropGestureRecognizer AllowDrop="True" Drop="OnDrop"/>
                </AbsoluteLayout.GestureRecognizers>

                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models:Element">
                        <ContentView AbsoluteLayout.LayoutFlags="None"
                                     AbsoluteLayout.LayoutBounds="{Binding Bounds}"
                                     BindingContext="{Binding .}">

                            <Border Stroke="Transparent" StrokeThickness="2" BackgroundColor="Transparent" Padding="2">
                                <VerticalStackLayout Spacing="2">
                                    <!-- ⬇️ ЖЕСТЫ ПОВЕСИЛИ НА САМО IMAGE, КОМАНДЫ С ПАРАМЕТРОМ -->
                                    <Image Source="{Binding ImagePath}"
                                           HeightRequest="40"
                                           WidthRequest="40"
                                           Aspect="AspectFit"
                                           HorizontalOptions="Center">
                                        <Image.GestureRecognizers>

                                            <!-- Двойной тап на поле → дублировать (в VM) -->
                                            <TapGestureRecognizer NumberOfTapsRequired="2"
                                                                  Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GameViewModel}}, Path=DuplicateElementCommand}"
                                                                  CommandParameter="{Binding .}"/>

                                            <!-- Drag start через команду (в VM) -->
                                            <DragGestureRecognizer CanDrag="True"
                                                                   DragStartingCommand="{Binding Source={RelativeSource AncestorType={x:Type vm:GameViewModel}}, Path=ElementDragStartingCommand}"
                                                                   DragStartingCommandParameter="{Binding .}"/>
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <Label Text="{Binding Name}"
                                           TextColor="White"
                                           FontSize="14"
                                           HorizontalOptions="Center"
                                           HorizontalTextAlignment="Center"
                                           LineBreakMode="TailTruncation"/>
                                </VerticalStackLayout>
                            </Border>

                        </ContentView>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>

            </AbsoluteLayout>
        </Border>

        <!-- Инвентарь -->
        <Border Grid.Row="1" StrokeThickness="1" Stroke="Gray" BackgroundColor="#222222" Padding="5" HeightRequest="160">

            <CollectionView ItemsSource="{Binding DiscoveredElements}"
                    SelectionMode="None"
                    VerticalScrollBarVisibility="Always"
                    HorizontalScrollBarVisibility="Never">

                <!-- Сетка — 5 колонок -->
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="5"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Element">
                        <Grid Padding="5" WidthRequest="75" HeightRequest="75">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer 
                            NumberOfTapsRequired="2"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GameViewModel}}, Path=SpawnElementFromInventoryCommand}"
                            CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>

                            <Border Stroke="Transparent" StrokeThickness="1" BackgroundColor="Transparent" Padding="2">
                                <VerticalStackLayout Spacing="2">
                                    <Image Source="{Binding ImagePath}"
                                   HeightRequest="40"
                                   WidthRequest="40"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center" />
                                    <Label Text="{Binding Name}"
                                   TextColor="White"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   LineBreakMode="TailTruncation"/>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </Border>

        <!-- Кнопки -->
        <HorizontalStackLayout Grid.Row="2" Spacing="10" HorizontalOptions="Center" Padding="0,10,0,10">
            <Button Text="Библиотека"
                    BackgroundColor="#3A3A3A"
                    TextColor="White"
                    Command="{Binding OpenLibraryCommand}" />       
            <Button Text="Очистить экран"
                    Command="{Binding ClearBoardCommand}"
                    BackgroundColor="OrangeRed"
                    TextColor="White"/>
            <Button Text="Выйти в меню"
                    Command="{Binding ExitCommand}"
                    BackgroundColor="Gray"
                    TextColor="White"/>
            
        </HorizontalStackLayout>

        <!-- (опциональный счёт, если нужен поверх) -->
        <!--<Label Grid.Row="0" Text="{Binding PlayerScore, StringFormat='Счет: {0}'}"
               TextColor="White"
               FontSize="Large"
               HorizontalOptions="End"
               VerticalOptions="Start"
               Margin="0,5,5,0" />-->

    </Grid>
</ContentPage>
